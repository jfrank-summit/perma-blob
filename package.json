{
  "name": "perma-blob",
  "version": "0.1.0",
  "description": "Ethereum L2 blob archival system using Autonomys Network",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write 'src/**/*.ts'",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist .tsbuildinfo"
  },
  "keywords": [
    "ethereum",
    "layer2",
    "blob",
    "archival",
    "autonomys",
    "storage"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@autonomys/auto-drive": "^1.4.35",
    "@autonomys/auto-utils": "^1.4.35",
    "@electric-sql/pglite": "^0.3.2",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "ioredis": "^5.6.1",
    "lru-cache": "^11.1.0",
    "node-fetch": "^3.3.2",
    "tsup": "^8.5.0",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "viem": "^2.30.5",
    "winston": "^3.17.0",
    "zod": "^3.25.36"
  },
  "devDependencies": {
    "@types/express": "^5.0.2",
    "@types/node": "^20.10.4",
    "@types/pg": "^8.15.2",
    "@typescript-eslint/eslint-plugin": "^8.33.0",
    "@typescript-eslint/parser": "^8.33.0",
    "@vitest/ui": "^3.1.4",
    "bull": "^4.16.5",
    "eslint": "^9.27.0",
    "pg": "^8.16.0",
    "prettier": "^3.5.3",
    "prom-client": "^15.1.3",
    "vitest": "^3.1.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
